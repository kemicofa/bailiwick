{
    "version": "1.2.2",
    "configurations": [
        {
            "name": "Run game",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": ["run", "main.ts"],
            "port": 9229,
            "outputCapture": "std"
        },
        {
            "name": "Run tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": ["test"],
            "port": 9229,
            "outputCapture": "std"
        }
    ]
}